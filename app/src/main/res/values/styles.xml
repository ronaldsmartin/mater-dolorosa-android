<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Navigation Bar -->
    <style name="NavDrawerSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="NavDrawerButton" parent="@android:style/Widget.Holo.Button.Borderless" tools:targetApi="11">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textAllCaps" tools:targetApi="14">true</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>

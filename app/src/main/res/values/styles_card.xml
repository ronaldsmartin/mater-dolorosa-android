<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd" tools:targetApi="17">@dimen/item_padding</item>
        <item name="android:paddingLeft">@dimen/item_padding</item>
        <item name="android:paddingRight">@dimen/item_padding</item>
        <item name="android:paddingStart" tools:targetApi="17">@dimen/item_padding</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardContent.Secondary">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardContent.Header">
        <item name="android:layout_marginTop">@dimen/item_padding</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardContent.Secondary.Subtitle">
        <item name="android:layout_marginBottom">@dimen/item_padding</item>
    </style>

    <style name="CardContent.Emailable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">start|left</item>
    </style>

    <style name="CardButton" parent="@android:style/Widget.Holo.Button.Borderless"
        tools:targetApi="11">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
    </style>

    <style name="CardDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>